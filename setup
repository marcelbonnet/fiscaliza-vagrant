#!/bin/bash
# 2020-05-27

echo -n "Atualizando utilit√°rios..."
rm -rf fiscaliza-vagrant-master
curl -sSL https://github.com/marcelbonnet/fiscaliza-vagrant/archive/master.zip | unzip -
[[ $? -ne 0 ]] && echo "Houve erro. Tente mais tarde." && exit
[[ -e /root/bin ]] || mkdir /root/bin
ln -s /root/fiscaliza-vagrant-master/ajuda bin/ajuda
cp /root/fiscaliza-vagrant-master/motd /etc/motd